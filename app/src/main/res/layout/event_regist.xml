<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Back to Donation Sites"
        android:elevation="4dp"
        android:scaleType="centerInside"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Event Name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="20sp"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/eventNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the event name"
        android:textColor="@color/black"
        android:textColorHint="@color/pale_pink"
        android:backgroundTint="@color/pale_pink"
        android:inputType="text" />

    <!-- Start Date -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textSize="20sp"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/startDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the start date (YYYY-MM-DD)"
        android:textColor="@color/black"
        android:textColorHint="@color/pale_pink"
        android:backgroundTint="@color/pale_pink"
        android:inputType="date" />

    <!-- Start Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textSize="20sp"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/startTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the start time (HH:mm)"
        android:textColor="@color/black"
        android:textColorHint="@color/pale_pink"
        android:backgroundTint="@color/pale_pink"
        android:inputType="time" />

    <!-- End Time -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:textSize="20sp"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/endTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the end time (HH:mm)"
        android:textColor="@color/black"
        android:textColorHint="@color/pale_pink"
        android:backgroundTint="@color/pale_pink"
        android:inputType="time" />

    <!-- Blood Types -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Types"
        android:textSize="20sp"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/bloodTypesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter required blood types (comma separated)"
        android:textColor="@color/black"
        android:textColorHint="@color/pale_pink"
        android:backgroundTint="@color/pale_pink"
        android:inputType="text" />

    <!-- Create Event Button -->
    <Button
        android:id="@+id/createEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:paddingTop="16dp"
        android:backgroundTint="@color/less_pink"
        android:paddingBottom="16dp" />
</LinearLayout>