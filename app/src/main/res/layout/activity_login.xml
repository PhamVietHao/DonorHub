<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Already have an account? and Image1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/bold_pink"
            android:textStyle="bold"
            android:text="Already have an account?"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/image1"
            android:contentDescription="Account Image"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- Username -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your username"
        android:textColor="@color/black"
        android:textColorHint="@color/pale_pink"
        android:backgroundTint="@color/pale_pink"
        android:inputType="text" />

    <!-- Password -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/pink"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:textColor="@color/black"
        android:textColorHint="@color/pale_pink"
        android:backgroundTint="@color/pale_pink"
        android:inputType="textPassword" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:paddingTop="16dp"
        android:backgroundTint="@color/less_pink"
        android:paddingBottom="16dp" />

    <!-- New user? Register now -->
    <TextView
        android:id="@+id/navigate_to_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New user? Register now"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="16dp" />
</LinearLayout>